<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
              https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="projectPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.imconsalting.projekat.response.Response</class>
        <class>com.imconsalting.projekat.profession.Profession</class>
        <class>com.imconsalting.projekat.empstatus.EmpStatus</class>
        <class>com.imconsalting.projekat.company.Company</class>
        <class>com.imconsalting.projekat.channel.Channel</class>
        <class>com.imconsalting.projekat.employee.Employee</class>
        <class>com.imconsalting.projekat.customer.Customer</class>
        <class>com.imconsalting.projekat.action.Action</class>

        <!-- Converters -->

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/project?zeroDateTimeBehaviour=null"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="show_sql" value="true"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        </properties>
    </persistence-unit>
</persistence>